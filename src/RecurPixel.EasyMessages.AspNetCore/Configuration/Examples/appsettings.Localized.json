{
  "EasyMessages": {
    "Formatter": {
      "IncludeTimestamp": true,
      "IncludeCorrelationId": true,
      "IncludeHttpStatusCode": true,
      "IncludeMetadata": false,
      "IncludeData": true
    },
    "Interceptor": {
      "AutoAddCorrelationId": true,
      "AutoEnrichMetadata": false
    },
    "Logging": {
      "AutoLog": true,
      "MinimumLogLevel": "Warning"
    },
    "Storage": {
      "CustomMessagesPath": null,
      "CustomStorePaths": null
    },
    "Localization": {
      "DefaultLocale": "en-US",
      "EnableLocalization": true,
      "FallbackToDefault": true
    }
  },
  "_comment": "Localized messages should be stored in:",
  "_structure": [
    "messages/en-US/messages.json",
    "messages/es-ES/messages.json",
    "messages/fr-FR/messages.json",
    "messages/de-DE/messages.json"
  ]
}
